<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:nanoTextBox="clr-namespace:NanoTextBox"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type nanoTextBox:NanoTextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type nanoTextBox:NanoTextBox}">
                    <nanoTextBox:InternalNanoTextBox BaseBackground="{TemplateBinding Background}"
                                                     BaseForeground="{TemplateBinding Foreground}"
                                                     BaseSelectionBrush="{TemplateBinding SelectionBrush}"
                                                     SelectionForeground="{TemplateBinding SelectionForeground}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>